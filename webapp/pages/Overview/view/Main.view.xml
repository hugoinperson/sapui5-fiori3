<mvc:View controllerName="utg.pages.Overview.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">

	<ScrollContainer height="100%"
		horizontal="false"
		vertical="true">

		<f:GridContainer snapToRow="true">
			<f:layout>
				<f:GridContainerSettings rowSize="5rem"
					columnSize="6rem"
					gap="1rem" />
			</f:layout>
			<f:layoutS>
				<f:GridContainerSettings rowSize="5rem"
					columnSize="6rem"
					gap="0.5rem" />
			</f:layoutS>
			<w:Card manifest="{manifests>/timeline}"
				action="onAction">
				<w:layoutData>
					<f:GridContainerItemLayoutData minRows="4"
						columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card manifest="{manifests>/list1}"
				action="onAction">
				<w:layoutData>
					<f:GridContainerItemLayoutData minRows="4"
						columns="3" />
				</w:layoutData>
			</w:Card>
			<w:Card manifest="{manifests>/list2}"
				action="onAction">
				<w:layoutData>
					<f:GridContainerItemLayoutData minRows="4"
						columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card manifest="{manifests>/table}"
				action="onAction">
				<w:layoutData>
					<f:GridContainerItemLayoutData minRows="4"
						columns="8" />
				</w:layoutData>
			</w:Card>
		</f:GridContainer>

	</ScrollContainer>



</mvc:View>
