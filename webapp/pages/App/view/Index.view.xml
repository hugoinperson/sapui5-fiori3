<mvc:View controllerName="utg.pages.App.controller.Index"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:tnt="sap.tnt"
	height="100%"
	displayBlock="true">

	<tnt:ToolPage>
		<tnt:header>
			<f:ShellBar class="utg-shell-bar"
				title="Twitter Board"
				secondTitle="{page>/date}"
				homeIcon="{resource>/logoUrl}"
				homeIconTooltip="Utegration"
				showCopilot="true"
				showNotifications="true"
				showMenuButton="true"
				homeIconPressed="onGoHome"
				notificationsNumber="2">
				<f:profile>
					<f:Avatar initials="UI"/>
				</f:profile>
				<f:searchManager>
					<f:SearchManager/>
				</f:searchManager>
			</f:ShellBar>
		</tnt:header>
		<tnt:mainContents>
			<IconTabBar class="sapUiResponsiveContentPadding"
				id="utgIconTabBar"
				expandable="false"
				stretchContentHeight="true"
				select="onSelectPage">
				<items>
					<IconTabFilter key="overview"
						text="Overview">
						<App id="overviewComponent" />
					</IconTabFilter>
					<IconTabFilter key="tweets"
						text="Tweets">
						<App id="tweetsComponent" />
					</IconTabFilter>
					<IconTabFilter key="followers"
						text="Followers">
						<App id="followersComponent" />
					</IconTabFilter>
				</items>
			</IconTabBar>
		</tnt:mainContents>
	</tnt:ToolPage>

</mvc:View>
