<mvc:View controllerName="utg.pages.Tweets.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">

	<ScrollContainer height="100%"
		horizontal="false"
		vertical="true">

		<f:GridContainer items="{twitter>/tweets}">
			<f:layout>
				<f:GridContainerSettings rowSize="5rem"
					columnSize="6rem"
					gap="1rem" />
			</f:layout>
			<f:layoutS>
				<f:GridContainerSettings rowSize="5rem"
					columnSize="6rem"
					gap="0.5rem" />
			</f:layoutS>
			<f:items>
				<w:Card manifest="{manifests>/tweet}"
					action="onAction">
					<w:layoutData>
						<f:GridContainerItemLayoutData minRows="4"
							columns="4" />
					</w:layoutData>
				</w:Card>
			</f:items>
		</f:GridContainer>

	</ScrollContainer>



</mvc:View>
