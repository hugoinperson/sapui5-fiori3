<mvc:View controllerName="utg.componentCard.Main"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml"
	width="100%"
	displayBlock="true">

	<HBox class="sapUiSmallMargin">
		<ComboBox placeholder="Peach Valley"
			selectedKey="peachValley">
			<items>
				<core:Item key="peachValley"
					text="Peach Valley" />
			</items>
		</ComboBox>
		<Button text="Get Directions"
			type="Emphasized"
			class="sapUiSmallMarginBegin"/>
	</HBox>
	<Image src="{/mapImageUrl}"
		alt="Sales manager"
		width="100%"/>
</mvc:View>
