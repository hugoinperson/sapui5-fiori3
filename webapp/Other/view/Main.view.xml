<mvc:View controllerName="utg.controller.Main"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:w="sap.ui.integration.widgets"
	height="100%"
	displayBlock="true">

	<NavContainer id="pageContainer"
		initialPage="page1">
		<pages>
			<ScrollContainer id="page1"
				class="sapUiResponsiveContentPadding sapUiSmallMarginBegin"
				horizontal="false"
				vertical="true">
				<f:GridContainer>
					<f:layout>
						<f:GridContainerSettings rowSize="5rem"
							columnSize="5rem"
							gap="1rem" />
					</f:layout>
					<f:layoutS>
						<f:GridContainerSettings rowSize="5rem"
							columnSize="5rem"
							gap="0.5rem" />
					</f:layoutS>
					<w:Card manifest="{manifests>/timeline}"
						action="onAction">
						<w:layoutData>
							<f:GridContainerItemLayoutData minRows="4"
								columns="4" />
						</w:layoutData>
					</w:Card>
					<w:Card manifest="{manifests>/object}"
						action="onAction">
						<w:layoutData>
							<f:GridContainerItemLayoutData minRows="4"
								columns="3" />
						</w:layoutData>
					</w:Card>
					<w:Card manifest="{/componentCardUrl}"
						action="onAction">
						<w:layoutData>
							<f:GridContainerItemLayoutData minRows="5"
								columns="6" />
						</w:layoutData>
					</w:Card>
				</f:GridContainer>
			</ScrollContainer>
			<ScrollContainer id="page2"
				horizontal="false"
				vertical="true"
				height="100%">
				<Toolbar>
					<SearchField id="searchTodoItemsInput"
						liveChange=".onSearch"
						width="100%"/>
				</Toolbar>
				<Input class="todoInput"
					id="addTodoItemInput"
					value="{/newTodo}"
					placeholder="{i18n>INPUT_PLACEHOLDER}"
					change=".addTodo"/>
				<List id="todoList"
					items="{ path: '/todos', events: { change: '.updateItemsLeftCount' } }"
					mode="MultiSelect"
					growing="true"
					growingScrollToLoad="true"
					showNoData="false"
					showSeparators="None"
					rememberSelections="false">
					<infoToolbar>
						<Toolbar>
							<Label id="itemsLeftLabel"
								text="{= ${/itemsLeftCount} === 1 ? ${/itemsLeftCount} + ' ' + ${i18n>ITEM_LEFT} : ${/itemsLeftCount} + ' ' + ${i18n>ITEMS_LEFT} }"/>
						</Toolbar>
					</infoToolbar>
					<CustomListItem class="todoListItem"
						selected="{completed}">
						<Input enabled="{=!${completed}}"
							value="{title}"/>
					</CustomListItem>
				</List>
			</ScrollContainer>
		</pages>
	</NavContainer>

</mvc:View>
