<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout">
	<layout:VerticalLayout>
		<Text text="{$this>/text}"/>
		<HBox items="{$this>/options}">
			<Button text="{$this>text}"
				press="onOptionPressed"/>
		</HBox>
	</layout:VerticalLayout>
</core:FragmentDefinition>
