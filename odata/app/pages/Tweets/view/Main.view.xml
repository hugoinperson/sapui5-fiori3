<mvc:View controllerName="utg.pages.Tweets.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">

	<ScrollContainer height="100%"
		width="100%"
		horizontal="false"
		vertical="true">

		<f:GridContainer class="sapUiSmallMargin"
			snapToRow="true"
			items="{path: '/Tweets', factory: '.cardFactory'}">
			<f:layout>
				<f:GridContainerSettings rowSize="6rem"
					columnSize="6rem"
					gap="1rem" />
			</f:layout>
			<f:layoutS>
				<f:GridContainerSettings rowSize="4.25rem"
					columnSize="4.25rem"
					gap="0.75rem" />
			</f:layoutS>
		</f:GridContainer>
	</ScrollContainer>

</mvc:View>
